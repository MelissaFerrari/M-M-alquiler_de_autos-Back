package AgenciaAutros.AgenciaAutos.service;

import AgenciaAutros.AgenciaAutos.entity.Auto;
import AgenciaAutros.AgenciaAutos.entity.Cliente;
import AgenciaAutros.AgenciaAutos.repository.ClienteRepository;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import java.util.List;

@Service
public class ClienteService {

    @Autowired
    ClienteRepository clienteRepository;

  //GET
    public List<Cliente> getClientes() {
        return clienteRepository.obtenerTodosLosClientes();
    }
    
  //POST   
    public Cliente agregarCliente(Cliente cliente) {
        return clienteRepository.save(cliente);
    }
    
  //DELETE       
    public boolean eliminarCliente(String dni) {
        if (clienteRepository.existsById(dni)) {
            clienteRepository.deleteById(dni);
            return true;
        }
        return false;
    }
    
  //PUT   
    public boolean existeAuto(String dni) {
        return clienteRepository.existsById(dni);
    }

    public Auto actualizarCliente(Cliente cliente) {
        return clienteRepository.save(cliente);
    }

}
