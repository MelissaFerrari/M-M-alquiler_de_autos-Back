package AgenciaAutros.AgenciaAutos.controller;

import java.util.List;

import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RestController;

import AgenciaAutros.AgenciaAutos.entity.Reserva;
import AgenciaAutros.AgenciaAutos.service.ReservaService;

@RestController
@CrossOrigin(origins = "http://localhost:4200")
public class ReservaController {

    @Autowired
    private ReservaService reservaService;

    @GetMapping("/getreservas")
    public List<Reserva> getReservas() {
        return reservaService.getReservas();
    }
    
    @PostMapping("/reservas")
    public ResponseEntity<String> crearReserva(@RequestBody Reserva reserva) {
        // Buscar auto en la base
        Auto autoBD = autoService.getAutoPorDominio(reserva.getAuto().getDominio());

        if (autoBD == null) {
            return ResponseEntity.status(HttpStatus.NOT_FOUND).body("Auto no encontrado.");
        }

        if (autoBD.isAlquilado()) {
            return ResponseEntity.status(HttpStatus.CONFLICT).body("El auto ya está alquilado.");
        }

        // Si está libre, lo marco como alquilado
        autoBD.setAlquilado(true);
        autoService.actualizarAuto(autoBD); // usa tu método del AutoService

        // Guardar la reserva
        reservaService.saveReserva(reserva);

        return ResponseEntity.ok("Reserva realizada con éxito y auto alquilado.");
    }

}

